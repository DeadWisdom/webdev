{
  "name": "@deadwisdom/router",
  "version": "0.1.0",
  "type": "module",
  "description": "A Lit-based router with URLPattern support",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target browser && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir ./dist",
    "test": "bun test",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "router",
    "lit",
    "urlpattern",
    "spa",
    "client-side-routing"
  ],
  "author": "DeadWisdom",
  "license": "MIT",
  "peerDependencies": {
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
